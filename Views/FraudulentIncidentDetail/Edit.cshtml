                    <i class="bi bi-envelope"></i>
                    <span>Contact</span>
                </a>
            </li><!-- End Contact Page Nav -->

            @* <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Register", "UserRegister")">
                    <i class="bi bi-card-list"></i>
                    <span>Register</span>
                </a>
