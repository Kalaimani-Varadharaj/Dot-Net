@model FraudDetectionRepositoryPatternProject.Models.TransactionHistory

@{
    ViewData["Title"] = "Details";
}


<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("FindAllIncidents", "FraudulentIncidentDetail")" class="logo d-flex align-items-center">
                <img src="~/content/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">FraudDetector</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="GET" action="@Url.Action("Details", "TransactionHistory")">
                <input type="text" name="transactionNumber" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->


        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("FindAllIncidents", "FraudulentIncidentDetail")">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Tables</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("FindAllTransactions", "TransactionHistory")">
                            <i class="bi bi-circle"></i><span>Find All Transactions</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("TransactionsJoinIncidents", "TransactionHistory")" id="data-tables-link">
                            <i class="bi bi-circle"></i><span>Find Transaction With Incidents</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("TransactionsWithIncidents", "TransactionHistory")" id="data-tables-link">
                            <i class="bi bi-circle"></i><span>Find Transaction & Incidents</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("FilterTransactions", "TransactionHistory")" id="data-tables-link">
                            <i class="bi bi-circle"></i><span>Filter Transaction</span>
                        </a>
                    </li>
                </ul>
            </li>
            <!-- End Tables Nav -->


            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Contact", "Home")">
                    <i class="bi bi-envelope"></i>
                    <span>Contact</span>
                </a>
            </li><!-- End Contact Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Register", "UserRegister")">
                    <i class="bi bi-card-list"></i>
                    <span>Register</span>
                </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Login", "UserRegister")">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Login</span>
                </a>
            </li><!-- End Login Page Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Data Tables</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("FindAllIncidents", "FraudulentIncidentDetail")">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Data</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->


        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div>
                        <h4>TransactionHistory</h4>
                        <hr />
                        <div class="alert @(ViewData["Response"] != null && ViewData["Response"].ToString().Contains("successfully") ? "alert-success" : "alert-danger")">
                            @ViewData["Response"]
                        </div>
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.TransactionDateTime)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.TransactionDateTime)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.SenderAccountNumber)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.SenderAccountNumber)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.BeneficiaryAccountNumber)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.BeneficiaryAccountNumber)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.SenderName)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.SenderName)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.BeneficiaryName)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.BeneficiaryName)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.PaymentMethod)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.CreatedAt)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.ModifiedAt)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.ModifiedAt)
                            </dd>
                        </dl>
                    </div>
                    

                </div>
            </div>
        </section>
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>FraudDetector</span></strong>. All Rights Reserved
        </div>

    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/content/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/content/assets/vendor/quill/quill.min.js"></script>
    <script src="~/content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/content/assets/js/main.js"></script>


</body>




